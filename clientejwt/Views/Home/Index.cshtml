@model List<UsuarioViewModel>

@{
    ViewData["Title"] = "Lista de usuarios";
}

<h1 class="h3 text-center text-success">Desarrollo de sistemas Web</h1>
<h2 class="h5 text-center text-muted">Licenciatura en ingenieria de Software</h2>
@if (Model.Count() > 0)
{
    //Aqui va el listado
    <h4 class="text-center mt-5 mb-3">Usuarios desde el backend</h4>
    <div class="table-responsive">
        <table class="table table-bordered small">
            <thead class="table-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().NombreCompleto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Email)
                    </th>
                    <th>
                        Roles
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <strong>@Html.DisplayFor(modelIten => item.Id)</strong>
                        </td>
                        <td>
                            <strong>@Html.DisplayFor(modelIten => item.NombreCompleto)</strong>
                        </td>
                        <td>
                            <strong>@Html.DisplayFor(modelIten => item.Email)</strong>
                        </td>
                        <td>
                            <strong>@Html.DisplayFor(modelIten => item.Rol)</strong>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="mt-5">
        <div class="alert alert-warning" role="alert">
            No se ha podido conectar al backend.
            <a asp-controller="Cuentas" asp-action="Login">Iniciar sesión</a>
        </div>
    </div>
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
